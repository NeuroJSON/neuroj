#!/bin/bash

if [[ $# -lt 1 ]] ; then
  echo "format: mergejson inputfolder"
  exit
fi

topfolder=$PWD
[[ ! -z "$1" ]] && topfolder=`readlink -f "$1"`

shopt -s globstar

pushd "$PWD"

cd $topfolder || { echo "$topfolder does not exist"; exit 1; }

for ff in ${topfolder%/}/*/
do
  relpath=`realpath --relative-to="$topfolder" "$ff"`
  echo $relpath
  jq -n 'reduce inputs as $s ({}; setpath(input_filename|sub("\\.(?<a>(tsv|nii|snirf|gz|mat))\\.(jbids|json|jnii|jnirs)$";"."+.a)|sub("\\.jbids";"")|split("/")[1:];$s) )' ${relpath/}/**/*.{json,jbids,jnii,jnirs} > ${ff%/}.jbids
done

popd
